{
  "name": "book-reviews-platform",
  "private": true,
  "scripts": {
    "dev": "concurrently \"pnpm dev:domain\" \"pnpm dev:backend\" \"pnpm dev:frontend\"",
    "dev:domain": "pnpm --filter @domain/core dev",
    "dev:backend": "pnpm --filter backend dev",
    "dev:frontend": "pnpm --filter frontend dev",
    "build": "pnpm build:domain && pnpm --filter backend build && pnpm --filter frontend build",
    "build:domain": "pnpm --filter @domain/core build",
    "test": "pnpm --filter backend test && pnpm --filter frontend test",
    "test:e2e": "pnpm --filter backend test:e2e",
    "lint": "pnpm --filter backend lint && pnpm --filter frontend lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\""
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "prettier": "^3.0.0"
  }
} 