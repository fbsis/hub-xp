{
  "name": "@infrastructure/core",
  "version": "1.0.0",
  "description": "Infrastructure layer with database connections and schemas",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@domain/core": "workspace:*",
    "mongoose": "^7.3.1"
  },
  "devDependencies": {
    "typescript": "^5.1.3",
    "@types/node": "^20.3.1",
    "@types/jest": "^29.5.2",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": ["<rootDir>/src"],
    "testMatch": ["**/*.spec.ts"],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/**/*.spec.ts",
      "!src/index.ts"
    ]
  }
} 